@{
    string showLayoutStyle = String.IsNullOrEmpty(Request.QueryString["layout"]) ? "block" : "none";
    string contentWrapperStyle = String.IsNullOrEmpty(Request.QueryString["layout"]) ? "50px" : "0px";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.7 -->
    <link rel="icon" href="/favicon.png" type="image/png" sizes="24x24">
    <link href="~/content/css/RoomCustom.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="/content/css/AdminLTE.min.css">
    <script src="/scripts/config.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/require.js/2.1.1/require.js"></script>


    <link rel="stylesheet" href="https://kendo.cdn.telerik.com/2017.2.621/styles/kendo.common-bootstrap.min.css" />
    @*<link href="~/Content/Css/kendo.common-bootstrap.min.css" rel="stylesheet" />*@

    <link rel="stylesheet" href="https://kendo.cdn.telerik.com/2017.2.621/styles/kendo.bootstrap.min.css" />
    @*<link href="/content/css/kendo.bootstrap.min.css" rel="stylesheet" />*@


    <!-- AdminLTE Skins. Choose a skin from the /content/css/skins
         folder instead of downloading all of them to reduce the load. -->
    <link rel="stylesheet" href="/content/css/_all-skins.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">

</head>

<body class="hold-transition skin-blue sidebar-mini">
    <div class="wrapper">
        <header style="display:@showLayoutStyle" class="main-header">
            <nav class="navbar navbar-static-top">
                <a href="#" class="sidebar-toggle" data-toggle="push-menu" role="button">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </a>
                <div class="logo-mini">
                    <img src="~/Content/Images/Medline-Logo-400x400.png" />
                </div>

                <a class="navbar-brand" href="~/Account/Home">CargoQuin</a>
                <div class="navbar-custom-menu1">
                    <span id="pageHeaders">
                        Active Module Name / Active Screen
                    </span>
                    <span id="pageHead">

                    </span>
                </div>
                <div class="navbar-custom-menu">
                    <ul class="nav navbar-nav">
                        <li class="dropdown user user-menu">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <span class="hidden-xs">UserName</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>
        </header>
        <aside class="main-sidebar">
            <section class="sidebar">
                <ul class="sidebar-menu" data-widget="tree"></ul>
            </section>
        </aside>
        <div class="content-wrapper">
            <section class="content">
                <div class="row">
                    <div class="col-xs-12">
                        <div class="box">
                            @RenderBody()
                        </div>
                    </div>
                </div>
            </section>
        </div>
        <footer class="main-footer">
            <div class="pull-right version hidden-xs">
                <b>Version</b> 2.4.0
            </div>
            <strong>Copyright &copy; 2017 <a href="#">Cargoquin</a>.</strong> All rights
            reserved.
        </footer>
    </div>
</body>
</html>
